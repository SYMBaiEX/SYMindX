# SYMindX Environment Configuration

# ==============================================================================
# MEMORY PROVIDERS
# ==============================================================================
# SQLite (default local database)
SQLITE_DB_PATH=./data/memories.db

# Supabase (cloud vector database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Neon (serverless Postgres)
NEON_DATABASE_URL=postgresql://user:password@ep-cool-darkness-123456.us-east-2.aws.neon.tech/neondb

# ==============================================================================
# AI PORTAL CONFIGURATION
# ==============================================================================

# ------------------------------------------------------------------------------
# GROQ (Primary Chat Provider)
# ------------------------------------------------------------------------------
GROQ_API_KEY=your-groq-api-key

# Portal Control
GROQ_ENABLED=true
GROQ_CHAT_ENABLED=true
GROQ_EMBEDDING_ENABLED=false  # Groq doesn't support embeddings
GROQ_IMAGE_ENABLED=false       # Groq doesn't support images

# Model Configuration
GROQ_CHAT_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
GROQ_TOOL_MODEL=llama-3.1-8b-instant

# ------------------------------------------------------------------------------
# OPENAI (Embeddings & Images Provider)
# ------------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key

# Portal Control
OPENAI_ENABLED=true
OPENAI_CHAT_ENABLED=false      # Disabled - using Groq for chat
OPENAI_EMBEDDINGS_ENABLED=true # Enabled for embeddings
OPENAI_IMAGE_ENABLED=true      # Enabled for image generation

# Model Configuration
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_TOOL_MODEL=gpt-4o-mini

# ------------------------------------------------------------------------------
# ANTHROPIC (Disabled by default)
# ------------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key

# Portal Control
ANTHROPIC_ENABLED=false
ANTHROPIC_CHAT_ENABLED=false
ANTHROPIC_EMBEDDING_ENABLED=false  # Anthropic doesn't support embeddings
ANTHROPIC_IMAGE_ENABLED=false      # Anthropic doesn't support images

# Model Configuration
ANTHROPIC_CHAT_MODEL=claude-3-haiku-20240307
ANTHROPIC_TOOL_MODEL=claude-3-haiku-20240307

# ------------------------------------------------------------------------------
# XAI (Disabled by default)
# ------------------------------------------------------------------------------
XAI_API_KEY=your-xai-api-key

# Portal Control
XAI_ENABLED=false
XAI_CHAT_ENABLED=false
XAI_EMBEDDING_ENABLED=false
XAI_IMAGE_ENABLED=false

# Model Configuration
XAI_CHAT_MODEL=grok-beta
XAI_TOOL_MODEL=grok-beta

# ------------------------------------------------------------------------------
# OLLAMA (Local AI - Disabled by default)
# ------------------------------------------------------------------------------
# Portal Control
OLLAMA_ENABLED=false
OLLAMA_CHAT_ENABLED=false
OLLAMA_EMBEDDING_ENABLED=false
OLLAMA_IMAGE_ENABLED=false

# Model Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.1:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TOOL_MODEL=llama3.1:8b

# ------------------------------------------------------------------------------
# OPENROUTER (Disabled by default)
# ------------------------------------------------------------------------------
OPENROUTER_API_KEY=your-openrouter-api-key

# Portal Control
OPENROUTER_ENABLED=false
OPENROUTER_CHAT_ENABLED=false
OPENROUTER_EMBEDDING_ENABLED=false
OPENROUTER_IMAGE_ENABLED=false

# Model Configuration
OPENROUTER_CHAT_MODEL=openai/gpt-3.5-turbo
OPENROUTER_TOOL_MODEL=openai/gpt-3.5-turbo

# ------------------------------------------------------------------------------
# GOOGLE (Disabled by default)
# ------------------------------------------------------------------------------
GOOGLE_API_KEY=your-google-api-key

# Portal Control
GOOGLE_ENABLED=false
GOOGLE_CHAT_ENABLED=false
GOOGLE_EMBEDDING_ENABLED=false
GOOGLE_IMAGE_ENABLED=false

# Model Configuration
GOOGLE_CHAT_MODEL=gemini-pro
GOOGLE_EMBEDDING_MODEL=embedding-001
GOOGLE_IMAGE_MODEL=gemini-pro-vision
GOOGLE_TOOL_MODEL=gemini-pro

# ------------------------------------------------------------------------------
# ADDITIONAL PORTALS (Disabled by default)
# ------------------------------------------------------------------------------
# Kluster.ai
KLUSTERAI_API_KEY=your-klusterai-api-key
KLUSTERAI_ENABLED=false

# Mistral
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_ENABLED=false

# Cohere
COHERE_API_KEY=your-cohere-api-key
COHERE_ENABLED=false

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENABLED=false

# ==============================================================================
# EMBEDDING CONFIGURATION
# ==============================================================================
ENABLE_OPENAI_EMBEDDINGS=true
EMBEDDING_PROVIDER=openai      # Options: openai, ollama
EMBEDDING_DIMENSIONS=3072      # For text-embedding-3-large

# ==============================================================================
# EXTENSION CONFIGURATION
# ==============================================================================
# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Twitter
TWITTER_USERNAME=your-twitter-username
TWITTER_PASSWORD=your-twitter-password

# RuneLite
RUNELITE_PLUGIN_PORT=8080

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=3001
NODE_ENV=development

# ==============================================================================
# WEBSITE CONFIGURATION
# ==============================================================================
VITE_API_URL=http://localhost:3001/api