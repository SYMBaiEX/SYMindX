{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // Module System
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    
    // Build Configuration
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": false,
    "disableReferencedProjectLoad": false,
    
    // Emit Configuration
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": false,
    "importsNotUsedAsValues": "remove",
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./",
    
    // JavaScript Support
    "allowJs": true,
    "checkJs": false, // Temporarily disabled to fix TypeScript errors first
    
    // Type Checking - Strict Mode
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    
    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    
    // Error Handling
    "noEmitOnError": true,
    "preserveWatchOutput": true,
    
    // Interop Constraints
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "forceConsistentCasingInFileNames": true,
    
    // Library Checking
    "skipLibCheck": true, // Temporarily enabled to focus on our code
    "skipDefaultLibCheck": false,
    
    // Advanced
    "useDefineForClassFields": true,
    "moduleDetection": "auto",
    "assumeChangesOnlyAffectDirectDependencies": false,
    
    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    
    // Type Acquisition
    "types": ["node"],
    "typeRoots": ["../node_modules/@types", "./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.disabled",
    "**/*.disabled.ts",
    "**/*.disabled.tsx",
    "src/modules/behaviors_disabled",
    "src/modules/life-cycle_disabled",
    "src/modules/tools.disabled",
    "src/prompts.disabled",
    "src/core/archived",
    "src/developer-experience",
    "src/community"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}