{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/api.ts",
    "src/core/**/*",
    "src/modules/**/*",
    "src/extensions/**/*",
    "src/portals/**/*",
    "src/security/**/*",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/cli/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "dist",
    "node_modules",
    "examples"
  ]
}