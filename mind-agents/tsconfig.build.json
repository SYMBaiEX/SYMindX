  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "dist",
    "node_modules",
    "examples",
    "src/cli/examples"
  ]
}