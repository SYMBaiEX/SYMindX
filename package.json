{
  "name": "@symindx/root",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun --cwd mind-agents run build && bun --cwd website run build",
    "build:agent": "bun --cwd mind-agents run build",
    "build:website": "bun --cwd website run build",
    "start": "bun --cwd mind-agents run start",
    "start:all": "concurrently \"bun run start\" \"bun --cwd website run preview\"",
    "dev": "concurrently \"bun run dev:agent\" \"bun run dev:website\"",
    "dev:agent": "bun --cwd mind-agents run dev",
    "dev:website": "bun --cwd website run dev",
    "test": "bun --cwd mind-agents test"
  },
  "workspaces": [
    "mind-agents",
    "website",
    "docs-site",
    "mind-agents/src/portals/*",
    "mind-agents/src/modules/emotion",
    "mind-agents/src/modules/memory",
    "mind-agents/src/modules/memory/providers/*",
    "mind-agents/src/modules/cognition",
    "mind-agents/src/extensions/*"
  ],
  "dependencies": {
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.7",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "bun-types": "latest"
  }
}
